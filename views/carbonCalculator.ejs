<%- layout('layouts/boilerplate')%>
    <h1>Carbon Footprint Calculator</h1>
    <div class="row mt-3">
        <div class="col-md-4 offset-md-4">


            <form action="/user/<%=user._id%>/calculator" method="post" novalidate class="validated-form">
                <div>
                    <label class="form-label" for="electricityUsed">Enter Amount of Electricity Used (kWh): </label>
                    <input class="form-control" type="text" id="electrictyUsed" name="electricityUsed" required>
                </div>
                <div class="mt-3">
                    <select class="form-select" aria-label="Default select example" name="fuelType" required>
                        <option selected>Select Type Of Fuel Used</option>
                        <option value="petrol">Petrol</option>
                        <option value="diesel">Diesel</option>
                        <option value="cng">CNG</option>
                        <option value="electric">Electric</option>
                        <option value="na">Not Applicable</option>
                    </select>
                </div>
                <div>
                    <label class="form-label" for="fuel">Enter Amount of Fuel Used (litre/cubic meter): </label>
                    <input class="form-control" type="text" name="fuel" id="fuel" required>
                </div>

                <div class="d-grid gap-* mt-3">
                    <button class="btn btn-success">Calculate</button>
                </div>

            </form>

            <div class="d-grid gap-* mt-3">

                <a href="/" class="btn btn-secondary ">Home</a>
            </div>
        </div>
    </div>